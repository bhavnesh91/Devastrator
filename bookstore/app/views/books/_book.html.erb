<table class="table table-striped">
  <thead>
    <th>Title</th>
    <th>Author</th>
    <th>Price</th>
    <th></th>
  </thead>
<tbody>
<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= number_to_currency(book.price) %></td>
  </tr>
<% end %>
</tbody>
</table>

